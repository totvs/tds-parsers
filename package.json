{
  "name": "@totvs/tds-parsers",
  "displayName": "TOTVS Developer Studio: Analisador Sintático",
  "description": "Extensão para análise sintática das linguagens proprietárias TOTVS.",
  "version": "0.1.6",
  "publisher": "TOTVS S.A",
  "author": {
    "name": "TOTVS S.A",
    "email": "tecnologia@totvs.com.br"
  },
  "license": "Apache-2.0",
  "keywords": [
    "4gl",
    "advpl",
    "tds",
    "totvs",
    "parser",
    "pegjs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/totvs/tds-parsers.git"
  },
  "bugs": {
    "url": "https://github.com/totvs/tds-parsers/issues"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "main": "lib/index.js",
  "types": "typings/index.d.ts",
  "files": [
    "lib/",
    "typings/",
    "grammar/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf lib && rimraf typings",
    "build": "tsc --version && tsc -p ./src",
    "watch": "tsc -p ./src --watch",
    "prebuild": "npm run genparser",
    "---PARSER---": "",
    "genparser": "npm-run-all genparser:*",
    "genparser:4gl": "npm run pegjs -- --allowed-start-rules start_program,start_token -o src/4gl.js grammar/4gl.pegjs",
    "genparser:advpl": "npm run pegjs -- --allowed-start-rules start_program,start_token -o src/advpl.js grammar/advpl.pegjs",
    "pegjs": "pegjs",
    "---TEST---": "",
    "test": "jest",
    "test:snapshot": "npm run test -- --updateSnapshot",
    "test:singlefile": "npm run test -- --runInBand --testNamePattern array2.4gl",
    "test:folder": "npm run test -- --testPathPattern advpl/hello",
    "test:coverage": "npm run test -- --coverage",
    "test:onlyFailures": "npm run test --onlyFailures",
    "pretest": "npm run build",
    "---RELEASE---": "",
    "release": "npx standard-version",
    "to_publish": "git push --follow-tags origin develop && npm publish --access public",
    "pack": "npm pack",
    "prerelease": "npm run build",
    "---MISC---": "",
    "contributors:check": "all-contributors check",
    "contributors:generate": "all-contributors generate"
  },
  "dependencies": {
    "pegjs": "^0.10.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/node": "^16.4.7",
    "@types/pegjs": "^0.10.3",
    "all-contributors-cli": "^6.20.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-snapshot-serializer-raw": "^1.2.0",
    "jest-watch-typeahead": "^0.6.4",
    "npm-run-all": "^4.1.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "git": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
