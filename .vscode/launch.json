{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest All",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceFolder}/node_modules/jest/bin/jest",
        "--runInBand",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "npm:build",
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Current File",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceFolder}/node_modules/jest/bin/jest",
        "--runInBand",
        "-t",
        "${fileBasename}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "npm:build"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Select File",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceFolder}/node_modules/jest/bin/jest",
        "--runInBand",
        "-t",
        "hello3.4gl"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "npm:build"
    },
  ]
}